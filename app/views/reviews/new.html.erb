<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">

  <main class="my-8 lg:flex-auto">
    <div>
      <h2 class="text-2xl font-semibold leading-7 text-gray-900">Add Review</h2>
    </div>

      <div class="mt-4 border border-gray-300 rounded-xl p-4 h-min">
        <h2 class="sr-only">Product information</h2>

        <div class="flex justify-between">
          <div class="flex">
            <%= image_tag @reservation.property.images[0], class:"w-20 h-20 object-cover rounded-md"%>
            <div class="ml-3 flex flex-col text-black font-medium text-sm">
              <div><%= @reservation.property.name %> - <%= @reservation.property.city %>, <%= country_name(@reservation.property.country_code) %></div>
              <span class="inline-flex items-center pointer-events-none block text-sm font-light text-black">
              <svg class="mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 12px; width: 12px; fill: currentcolor;">
                <path fill-rule="evenodd" d="m15.1 1.58-4.13 8.88-9.86 1.27a1 1 0 0 0-.54 1.74l7.3 6.57-1.97 9.85a1 1 0 0 0 1.48 1.06l8.62-5 8.63 5a1 1 0 0 0 1.48-1.06l-1.97-9.85 7.3-6.57a1 1 0 0 0-.55-1.73l-9.86-1.28-4.12-8.88a1 1 0 0 0-1.82 0z"></path>
              </svg>
                <%= @reservation.property.average_overall_rating.round(2) %> (<%= @reservation.property.reviews_count %> reviews)
            </span>
            </div>
          </div>
        </div>
          <div class="relative py-6">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-gray-300"></div>
            </div>
          </div>
         <div class="max-w-96">
           <%= form_with url: reservation_reviews_path(),method: :post do |f|%>
             <div class="flex flex-col py-4">
               <%= f.label :content %>
               <%= f.text_area :content,class:"rounded-md",rows:"3"%>
             </div>

             <div data-controller="rating">
               <%= render "rating_item",f:f,category_rating:"cleanliness_rating" %>
               <%= render "rating_item",f:f,category_rating:"accuracy_rating" %>
               <%= render "rating_item",f:f,category_rating:"checkin_rating" %>
               <%= render "rating_item",f:f,category_rating:"communication_rating" %>
               <%= render "rating_item",f:f,category_rating:"location_rating" %>
               <%= render "rating_item",f:f,category_rating:"value_rating" %>
             </div>


             <%= f.submit "Add review",class:"cursor-pointer flex h-10 items-center justify-center rounded-md border border-transparent bg-primary px-8 py-1 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary-dark focus:ring-offset-2"%>
           <% end %>
         </div>
      </div>
  </main>
</div>